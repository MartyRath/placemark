<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Species</th>
      <th>Height</th>
      <th>Girth</th>
      <th>County</th>
    </tr>
  </thead>
  <tbody>
    {{#each province.trees}}
      <tr>
        <td>
          {{species}}
        </td>
        <td>
          {{height}}
        </td>
        <td>
          {{girth}}
        </td>
        <td>
          {{county}}
        </td>
          <a href="/province/{{../province._id}}/deletetree/{{_id}}" class="ui icon button">
            <i class="fas fa-trash"></i>
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
