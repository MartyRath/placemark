<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>User Name</th>
      <th>Email</th>
      <th>Password</th>
      <th>ID</th>
      <th>Delete User</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
      <tr>
        <td>
          {{firstName}} {{lastName}}
        </td>
        <td>
          {{email}}
        </td>
        <td>
          {{password}}
        </td>
        <td>
          {{_id}}
        </td>
        <td>
          <a href="/admin/deleteuser/{{user._id}}" class="ui icon button">
            <i class="fas fa-trash"></i>
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>